<?xml version="1.0" encoding="utf-8" ?>
<ParticleSystem>
  <!-- XNA-specific parameters go here.-->
  <XNAParameters>
    <spriteEffects x="None"></spriteEffects>
    <blendState x="Additive"></blendState>
    <spriteSortMode x="Deferred"></spriteSortMode>
    <textureList>
      <texture x="smoke"></texture>
    </textureList>
  </XNAParameters>
  <!-- Explicit parameters for emitter go here: -->
  <EmitterParameters>
    <location x="450" y="350" z="0"></location>
    <dimension x="50" y="50" z="0"></dimension>
    <maxNumParticles x="500"></maxNumParticles>
    <emitRate x="5"></emitRate>
    <meanEmitDelay x="5"></meanEmitDelay>
    <emitterLifetime x="300"></emitterLifetime>
    <permanentParticles x="false"></permanentParticles>
  </EmitterParameters>
  <!-- Random parameters for particle generation go here:-->
  <ParticleParameters>
    <position>
      <alpha x="0" y="0" z="0"></alpha>
      <beta x="250" y="250" z="0"></beta>
      <distribution x="Normal"></distribution>
    </position>

    <velocity>
      <alpha x="-50" y="-50" z="0"></alpha>
      <beta x="50" y="50" z="0"></beta>
      <distribution x="Uniform"></distribution>
    </velocity>

    <acceleration>
      <alpha x="0.0" y="0.0" z="0"></alpha>
      <beta x="0.0" y="0.0" z="0"></beta>
      <distribution x="Fixed"></distribution>
    </acceleration>


    <color>
      <alpha x="255" y="255" z="255"></alpha>
      <beta x="255" y="255" z="255"></beta>
      <distribution x="Fixed"></distribution>
    </color>

    <angle alpha="0" beta="1.0" distribution="Uniform"></angle>
    <angularVelocity alpha="0" beta="10" distribution="Uniform"></angularVelocity>
    <transparency alpha="1.0" beta="1.0" distribution="Fixed"></transparency>
    <transparencyDelta alpha="-3.0" beta="-1.0" distribution="Uniform"></transparencyDelta>
    <size alpha="0.5" beta="0.25" distribution="Normal"></size>
    <growth alpha="0.0" beta="0.1" distribution="Uniform"></growth>
    <ttl alpha="5000" beta="100" distribution="Normal"></ttl>
  </ParticleParameters>

</ParticleSystem>

